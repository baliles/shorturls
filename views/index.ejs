<% include header %>

<h1>
	Shorten any Web Link.
</h1>

<p class="lead">
	Paste the entire URL below and Heroku will shorten it for you.
</p>

<form action="/shorten" method="post">
	<div class="input-group">
		<input type="text" class="form-control form-control-lg" name="url" placeholder="Paste a URL here" required>
		<span class="input-group-btn">
			<button class="btn btn-primary btn-lg" type="submit">Go!</button>
		</span>
	</div>
</form>

<% include footer %>